

//User function Template for Java

class Solution {
    void segregate0and1(int[] arr, int n) {
        // code here
        
        int cnt = 0;
        for(int i = 0; i<n; i++){
            if(arr[i] == 0){
                cnt++;
            }
        }
        for(int i = 0; i<cnt; i++){
            arr[i] = 0;
        }
        for(int i = cnt; i<n; i++){
            arr[i] = 1;
        }
    }
}
