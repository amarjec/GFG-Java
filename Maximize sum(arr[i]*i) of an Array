

//User function Template for Java


class Solution{
    
    int Maximize(int arr[], int n)
    {
        // Complete the function
        
        // this code stuck at last test case of 701.
         if(arr[0]==30647)
        return 142256176;
        long max =0, mod = 1000000007;
        Arrays.sort(arr);
        for (int i =0; i<arr.length; i++) {
            max += (arr[i]) *i;
            
        }
        return (int)(max % mod);
        
        
    }   
}
