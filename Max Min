

//User function Template for Java

class Solution
{ 
    public static int findSum(int A[],int N) 
    {
        //code here
        double min =1e9, max=-1e9;
        for (int i =0; i<N; i++) {
            if(A[i] < min) {
                min = A[i];
            }
            if (A[i] > max) {
                max = A[i];
            }
        }
        int sum = (int) (min+max);
        return sum;
    }
}
