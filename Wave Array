

class Solution {
    public static void convertToWave(int n, int[] arr) {
        // code here
        int temp = 0;
        int new_n = 0;
        if (n%2 == 0) new_n =n;
        else new_n = n-1;
            for (int i = 0; i<new_n; i+=2) {
                temp = arr[i];
                arr[i] = arr[i+1];
                arr[i+1] = temp;
            }
       
    }
}
        
